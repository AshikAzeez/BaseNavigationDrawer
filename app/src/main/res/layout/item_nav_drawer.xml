<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"  android:id="@+id/container"  android:layout_width="match_parent"  android:layout_height="70dp"  android:background="@android:color/white"  android:clickable="true"  android:focusable="true"  android:foreground="?attr/selectableItemBackground"  android:minHeight="70dp"  android:orientation="vertical"  android:theme="@style/AppTheme">  <LinearLayout    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="horizontal">    <ImageView      android:layout_width="0dp"      android:layout_height="match_parent"      android:layout_weight="1"      android:src="@android:drawable/ic_menu_gallery" />    <TextView      android:id="@+id/txt_nav_head"      android:layout_width="0dp"      android:layout_height="match_parent"      android:layout_gravity="center"      android:layout_weight="6"      android:ellipsize="end"      android:gravity="center_vertical"      android:maxLines="1"      android:paddingStart="20dp"      android:paddingLeft="20dp"      android:textAllCaps="false"      android:textSize="20sp"      tools:text="head" />  </LinearLayout></LinearLayout>